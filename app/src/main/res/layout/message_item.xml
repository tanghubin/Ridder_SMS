<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <RelativeLayout
        android:id="@+id/mi_rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="41dp"
            android:src="@drawable/ic_male"
            />
        <LinearLayout
            android:id="@+id/mi_ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_person"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/mi_tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siri"
                android:textSize="15sp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/mi_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What are you doing"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:maxLines="5"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-4 12:30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
           android:layout_marginTop="21dp"
            />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@color/seashell"
            >

            <TextView
                android:id="@+id/tv_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:drawableLeft="@drawable/ic_roof_placements"
                android:text="Thumb"
                android:textSize="12sp"
                android:textStyle="bold"
                android:drawablePadding="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_laijt"
                android:text="Delete"
                android:textSize="12sp"
                android:textStyle="bold"
                android:drawablePadding="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
